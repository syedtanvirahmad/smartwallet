<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="9dp"
    app:contentPadding="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/incomeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="income amount"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/incomeSourceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="description"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Income Type"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="#e9dede"
            />

        <Spinner
            android:id="@+id/incomeSourceSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:background="#e9dede"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/incomeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22-11-2017"
            android:gravity="center"
            android:drawableBottom="@android:drawable/ic_menu_edit"
            android:textSize="16sp"
            android:padding="10dp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>