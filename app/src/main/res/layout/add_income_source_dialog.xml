<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="9dp"
    app:contentPadding="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/organizationNameValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name of organization"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/incomeAmountValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="income amount"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Income Type"
            android:gravity="center"
            android:padding="10dp"
            android:background="#ccc"/>
        <RadioGroup
            android:id="@+id/incomeTypeRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/monthlySalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Salary"/>
            <RadioButton
                android:id="@+id/contractualJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contractual Job"/>
            <RadioButton
                android:id="@+id/business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business"/>
            <RadioButton
                android:id="@+id/others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"/>
        </RadioGroup>
    </LinearLayout>

</android.support.v7.widget.CardView>